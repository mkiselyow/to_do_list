.cont_crear_new{class: "new_task pr#{project.id}", name: "pr#{project.id}"}
  =form_for([project, task], remote: true) do |f|
    %table.table
      %tr
        %th Action
        %th Title
      %tr
        %td
          %select#action_select{:name => "task[action]", class: 'width100perc'}
            %option{:value => "SHOPPING"} SHOPPING
            %option{:value => "WORK"} WORK
            %option{:value => "SPORT"} SPORT
            %option{:value => "MUSIC"} MUSIC
          / End td 1
        %td{colspan: '2'}
          -# %input.input_title_desc{:type => "text"}/
          = f.text_field :title, id: :task_title, required: true, pattern: "([A-Za-z0-9\s]){3,15}", size: 15, class: 'input_title_desc'
          / End td 2
      %tr
        %th.titl_description Deadline
      %tr
        %td{:colspan => "4"}
          = date_select :task, :deadline, {order: [:day, :month, :year], start_year: 2018}, {class: 'width30perc'}
          -# %input.input_description{:required => "", :type => "text"}/
      %tr
        %td{:colspan => "3"}
          = f.submit 'ADD', class: 'add_task_submit_button'