#sign_up.modal.fade{"aria-labelledby" => "sign_upLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog{role: "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h2 Sign up
      .modal-body
        = form_for(User.new, url: registration_path(:user), html: {id: 'sign_up_user'}, :'data-type' => 'json', remote: true, :format => :json) do |f|
          %div
            = f.label :email
            %br/
            = f.email_field :email, autocomplete: "off", autofocus: true
          %div
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "off"
          %div= f.submit "Sign up"
      .modal-footer