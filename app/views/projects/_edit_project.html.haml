.cont_principal.new_project.edit_project{class: "edit_pr#{project.id}", name: "edit_pr#{project.id}"}
  .cont_centrar
    .cont_todo_list_top
      =form_with model: project, remote: true do |f|
        .cont_titulo_cont
          %h3= f.label 'Enter New Title'
          %h3= f.text_field :title, id: :project_title, required: true
        .cont_add_titulo_cont
          = link_to project_path(project), method: :delete, remote: true, 'title' => 'delete project', class: 'delete_project' do
            %i.material-icons delete
        .cont_add_titulo_cont
          = button_tag do
            %i.material-icons input