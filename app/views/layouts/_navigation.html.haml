
#navigation.collapse.navbar-collapse
  - if current_user
    %ul.nav.navbar-nav
      %li
        %p.navbar-text
          = "Signed in as #{current_user.email}"
      %li
        = link_to "Sign out", destroy_user_session_path, :method => :delete, remote: true, id: 'sign_out', class: "btn btn-default", type: 'button'
      %li
        %a{href: "#"} Link
    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", href: "#", role: "button"}
          Options
          %span.caret
        %ul.dropdown-menu
          %li
            =link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, remote: true, id: 'cancel_account'
  - else
    %ul.nav.navbar-nav
      %li
        = link_to "Sign in", "#sign_in", "data-toggle" => "modal", class: "btn btn-default", type: 'button'
      %li
        = link_to "Sign up", "#sign_up", "data-toggle" => "modal", class: "btn btn-default", type: 'button'
      %li
        %a{href: "#"} Link
  = render 'devise/registrations/new'
  = render 'devise/sessions/new'