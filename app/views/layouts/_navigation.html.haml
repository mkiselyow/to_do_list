#navigation
  - if current_user
    = "Hello, #{current_user.email}"
    = link_to "Sign out", destroy_user_session_path, :method => :delete, remote: true, id: 'sign_out'
    %h3 Cancel my account
    %p
      Unhappy?
      =button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, remote: true, id: 'cancel_account'
  - else
    = link_to "Sign in", "#sign_in", "data-toggle" => "modal", :class => 'btn btn-small'
    = link_to "Sign up", "#sign_up", "data-toggle" => "modal", :class => 'btn btn-small'
    = render 'devise/registrations/new'
    = render 'devise/sessions/new'
